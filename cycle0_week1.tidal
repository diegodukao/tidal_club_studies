d1 $ sound "kick snare"

d1 $ silence

d2 $ s "clap"

d3 $ n "0 2 1 3 4 5 6 7 2" # s "clap"

d3 $ n "0 2 1 ~ 4 5 6 7 2" # s "clap"

d3 $ n "0 2 1 [~ 3] 4 5 6 7 2" # s "clap"

d3 $ n "0 2 1 2 3" # s "clap"

d3 $ n "0 2 1 [2 3]" # s "clap"

d3 $ n "[0 2 1] [0 3 [2 4] 4]" # s "kick"

hush

-- week 1 lesson 4

-- speading up, repeating and slowing down

d1 $ sound "hi lo*3"

d1 $ sound "hi [hi lo]*3"

d1 $ sound "hi [hi lo]*1.5"

d1 $ sound "[hi [hi lo]*1.5]*2"

d1 $ sound "hi lo lo lo"

d1 $ sound "hi lo*3"

d1 $ sound "hi lo!3"

d1 $ sound "hi lo/2"

d1 $ sound "clap:4 [lo hi]/2"

d1 $ sound "clap:4 [lo hi bd sd]/2"

d1 $ sound "[clap:4 [lo hi bd sd]/2]*2"

d1 $ fast 2 $ sound "clap:4 [lo hi bd sd]/2"

d1 $ sound "clap:4 [lo hi bd]/2"

d1 $ fast 4 $ sound "[clap:4 sd mt ht]/3 [lo hi bd]/2"

-- polyphony with ,

d1 $ sound "[bd sn, arpy*3, mt ht lt mt] [clap snare]"

d1 $ fast 4 $ sound "[bd sd, arpy arpy:4 arpy:5]"

d1 $ fast 4 $ sound "{bd sd, arpy arpy:4 arpy:5}"

-- rhytmic feet with .

d1 $ sound "[bd sn] [mt [ht lt]] [arpy arpy:4] [snare clap:4 bd*2]"

d1 $ sound "bd sn . mt [ht lt] . arpy arpy:4 . snare clap:4 bd*2"

-- one step per cycle with <>

d1 $ fast 3 $ sound "hi [arpy arpy:1 arpy:2]/3"

d1 $ fast 3 $ sound "hi <arpy arpy:1 arpy:2>"

